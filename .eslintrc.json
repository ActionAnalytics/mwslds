{
    "extends": "airbnb",
    "rules": {
      "semi": ["error", "never"],
      "class-methods-use-this": 0,
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "react/forbid-prop-types": 0,
      "react/no-array-index-key": 0,
      "jsx-a11y/label-has-for": 0,
      "jsx-a11y/anchor-is-valid": 0
    },
    "env": {
      "browser": true
    },
    "globals": {
      "it": true,
      "describe": true,
      "expect": true,
      "jest": true
    }
}
